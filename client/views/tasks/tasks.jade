h3 Tasks

.row
  .col-xs-4.col-xs-offset-4
    form(name='taskForm')
      .form-group
        label(for='title') To-Do
        input#title.form-control(type='text', name='title', ng-model='task.title')
      .form-group
        label(for='dueDate') Password
        input#duedate.form-control(type='date', name='dueDate', ng-model='task.dueDate')
      .form-group
        label(for='priority') Priority
        select#priority.form-control(name='priority', ng-model='task.priority')
          option high
          option medium
          option low
      .form-group
        button.btn.btn-default.form-control(type='submit', ng-click='addTask(task)') Submit
  .row
    .col-xs-12
      table.table.table-striped
        thead
          tr
            th Edit
            th Delete
            th Title
            th Due Date
            th Priority
            th Complete
            th Created At
        tbody
          tr(ng-repeat='task in afTasks')
            td: button(ng-click='editTask(task)') Edit
            td: button(ng-click='deleteTask(task)') Delete
            td {{task.title}}
            td {{task.dueDate | date: 'dd MMM yyyy'}}
            td {{task.priority}}
            td {{task.isComplete}}
            td {{task.createdAt}}
          
